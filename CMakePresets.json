{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "NinjaPreset",
      "hidden": true,
      "generator": "Ninja",
      "toolchainFile": "thirdparty/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_TOOLCHAIN_FILE": "thirdparty/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_MODE": "ON"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio Clang"
        }
      }
    },
    {
      "name": "Debug",
      "inherits": "NinjaPreset",
      "description": "Debug build configuration",
      "hidden": false,
      "binaryDir": "build/cmake-build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release",
      "inherits": "NinjaPreset",
      "description": "Release build configuration",
      "binaryDir": "build/cmake-build-release",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "LivePP",
      "inherits": "Debug",
      "description": "Debug configuration with Live++ enabled",
      "hidden": false,
      "binaryDir": "build/cmake-build-debug-livepp",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "USE_LIVE_PP": "ON"
      }
    },
    {
      "name": "ios-xcode",
      "displayName": "iOS Xcode",
      "description": "Preset to generate an Xcode project for iOS",
      "generator": "Xcode",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "13.0",
        "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64",
        "CMAKE_IOS_INSTALL_COMBINED": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "displayName": "Debug",
      "name": "Debug",
      "configurePreset": "Debug",
      "description": "Build the Debug configuration",
      "hidden": false,
      "jobs": 0
    },
    {
      "displayName": "HotReload",
      "name": "HotReload",
      "configurePreset": "LivePP",
      "description": "Build the Debug configuration",
      "hidden": false,
      "jobs": 0
    },
    {
      "displayName": "Release",
      "name": "Release",
      "configurePreset": "Release",
      "description": "Build the Release configuration",
      "hidden": false,
      "jobs": 0
    }
  ]
}
